<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:editors="clr-namespace:LevelEditorPlugin.Controls.Editors">

    <Style TargetType="{x:Type editors:ColorPickerControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type editors:ColorPickerControl}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="{Binding Path=SelectedColor, RelativeSource={RelativeSource TemplatedParent}}" BorderBrush="Black" BorderThickness="1"/>
                        <TextBox Grid.Column="1" Text="{Binding Path=SelectedColorText, RelativeSource={RelativeSource TemplatedParent}}" HorizontalAlignment="Stretch" Margin="6 0 0 0"/>
                        
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>