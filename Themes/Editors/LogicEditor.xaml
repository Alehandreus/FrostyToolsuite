<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="clr-namespace:Frosty.Core.Controls;assembly=FrostyCore"
                    xmlns:editors="clr-namespace:LevelEditorPlugin.Editors">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FrostyControls;component/Themes/Generic.xaml"/>
        <ResourceDictionary Source="/LevelEditorPlugin;component/Themes/Common.xaml"/>
        <ResourceDictionary Source="/LevelEditorPlugin;component/Themes/Editors/ViewModels/SchematicsViewModel.xaml"/>
        <ResourceDictionary Source="/LevelEditorPlugin;component/Themes/Editors/ViewModels/InterfaceViewModel.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- LogicEditor -->
    <Style TargetType="{x:Type editors:LogicEditor}"  BasedOn="{StaticResource BaseEditor}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type editors:LogicEditor}">

                    <ContentPresenter Content="{Binding Path=ViewModel, RelativeSource={RelativeSource TemplatedParent}}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>